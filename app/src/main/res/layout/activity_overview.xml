<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/white"
    android:padding="10dp"
    tools:context=".OverviewActivity">
    <!-- Header Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="8dp">

        <TextView
            android:id="@+id/tvStallNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="  S1"
            android:fontFamily="@font/poppins_bold"
            android:textSize="15sp"
            android:layout_marginLeft="18dp"
            android:textStyle="bold"
            android:textColor="@color/green"
            android:background="@drawable/circle_background"
            android:padding="8dp" />

        <ImageView
            android:id="@+id/tvLogo"
            android:layout_width="67dp"
            android:layout_height="57dp"
            android:src="@drawable/loginbg"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginStart="18dp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnOpen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Open"
            android:textAllCaps="false"
            android:background="@drawable/rounded_button"
            android:textColor="@color/yellow"
            android:padding="1dp"
            android:textSize="12sp"
            android:layout_marginStart="140dp"/>
    </LinearLayout>

    <!-- Tabs -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvOrders"
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:layout_weight="1"
            android:text="OVERVIEW"
            android:fontFamily="@font/poppins_bold"
            android:textSize="20sp"
            android:textColor="@color/green"
            android:layout_marginLeft="10dp"
            android:gravity="left"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="17dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/sales"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:text="sales"
            android:fontFamily="@font/poppins"
            android:textSize="14sp"
            android:textColor="@color/black"
            android:paddingLeft="30dp"
            android:layout_marginLeft="10dp"
            android:gravity="left"
            android:textStyle="italic"
            />

    </LinearLayout>



    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:orientation="horizontal"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:paddingBottom="50dp">

            <ImageButton
                android:id="@+id/button"
                android:layout_width="110dp"
                android:layout_height="50dp"
                android:backgroundTint="#00FFFFFF"
                android:src="@drawable/today"
                android:text=""
                app:srcCompat="@drawable/today" />

            <ImageButton
                android:id="@+id/button1"
                android:layout_width="110dp"
                android:layout_height="50dp"
                android:backgroundTint="#00FFFFFF"
                android:src="@drawable/yesterday"
                android:text=""
                app:srcCompat="@drawable/yesterday"/>

            <ImageButton
                android:id="@+id/button2"
                android:layout_width="110dp"
                android:layout_height="50dp"
                android:backgroundTint="#00FFFFFF"
                android:src="@drawable/last7days"
                android:text=""
                app:srcCompat="@drawable/last7days"/>

            <ImageButton
                android:id="@+id/button3"
                android:layout_width="110dp"
                android:layout_height="50dp"
                android:backgroundTint="#00FFFFFF"
                android:src="@drawable/lastmonth"
                app:srcCompat="@drawable/lastmonth"
                android:text=""/>

        </LinearLayout>

    </HorizontalScrollView>


    <!-- Order Status Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:padding="1dp">

        <LinearLayout
            android:layout_width="340dp"
            android:layout_height="180dp"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/rectangle_overview"
            android:orientation="vertical"
            android:scrollbarSize="14dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_medium"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="50dp"
                android:text="ORDER"
                android:textSize="20sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_medium"
                android:layout_marginLeft="80dp"
                android:text="1"
                android:textSize="30sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:fontFamily="@font/poppins_medium"
                android:text="completed orders"
                android:textSize="8sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="50dp"
                    android:layout_marginTop="30dp"
                    android:fontFamily="@font/poppins_medium"
                    android:text="ORDER"
                    android:textSize="20sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="80dp"
                    android:fontFamily="@font/poppins_medium"
                    android:text="1"
                    android:textSize="30sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="50dp"
                    android:fontFamily="@font/poppins_medium"
                    android:text="completed orders"
                    android:textSize="8sp" />

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="17dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/reviews"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:text="Reviews"
                android:fontFamily="@font/poppins"
                android:textSize="14sp"
                android:textColor="@color/black"
                android:paddingLeft="30dp"
                android:layout_marginLeft="10dp"
                android:gravity="left"
                android:textStyle="italic"
                />

        </LinearLayout>




    </LinearLayout>

    <!-- Bottom Navigation -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/white"
        android:gravity="center"
        android:paddingTop="10dp"
        android:paddingBottom="10dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <ImageButton
                android:id="@+id/order_btn"
                android:layout_width="35dp"
                android:layout_height="35dp"
                app:tint="#00FF8B00"
                app:srcCompat="@drawable/add_to_cart_svgrepo_com"
                android:background="@drawable/add_to_cart_svgrepo_com"
                android:text="" />

            <TextView
                android:id="@+id/ordertxt"
                android:layout_width="55dp"
                android:layout_height="20dp"
                android:fontFamily="@font/poppins_bold"
                android:gravity="center"
                android:textSize="15sp"
                android:text="ORDER"
                />


        </LinearLayout>



        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <ImageButton
                android:id="@+id/overview_btn"
                android:layout_width="60dp"
                android:layout_height="50dp"
                app:tint="#00FF8B00"
                android:src="@drawable/overviewview"
                android:background="@drawable/overviewview"
                android:text=""
                app:srcCompat="@drawable/overviewview"/>


        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <ImageButton
                android:id="@+id/queue_btn"
                android:layout_width="50dp"
                android:layout_height="50dp"
                app:tint="#00FF8B00"
                android:background="@drawable/newqueue"
                android:src="@drawable/newqueue"
                app:srcCompat="@drawable/newqueue"
                android:text=""
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <ImageButton
                android:id="@+id/menu_btn"
                android:layout_width="60dp"
                android:layout_height="50dp"
                app:tint="#00FF8B00"
                android:text=""
                android:background="@drawable/newmenu"
                app:srcCompat="@drawable/newmenu"
                android:src="@drawable/newmenu"/>

        </LinearLayout>
    </LinearLayout>
</LinearLayout>